<!--一覧画面-->
<h2>Books</h2>

<!--一覧表示-->
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>  </th> 
  </tr>
  <% @books.each do |book|%>
    <tr>
      <th><%=  book.title %></th>
      <th><%=  book.body %></th>
      <th><%= link_to "Show", book_path(book) %></th>
      <th><%= link_to "Edit", edit_book_path(book) %></th>
      <th><%= link_to "Destroy", book_path(book), method: :delete %></th>
    </tr>
  <% end %>
</table>

<!--新規投稿フォーム-->
<h3>New book</h3>
<%= form_with model:@book, local:true do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Body</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>